{
    "configurations": [
        {
            "name": "Python: File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "justMyCode": true
        },
        {
            "name": "Python: Evaluation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/evaluation/run.py",
            "args": ["--result", "result.json", "--cores", "1"],
            "justMyCode": true
        },
        {
            "name": "Python: Visualisation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/visualisation/run.py",
            "args": ["--result", "results/result.relative.json"],
            "justMyCode": true
        }
    ]
}